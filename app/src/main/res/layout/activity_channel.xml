<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.shiyuji.Titlebar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:titlebarText="频道" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:background="@drawable/beijing"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:columnCount="3">

                    <Button
                        android:id="@+id/literature"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/pao271"
                        android:text="@string/chan1" />

                    <Button
                        android:id="@+id/music"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/pao271"
                        android:text="@string/chan2" />

                    <Button
                        android:id="@+id/dancing"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/pao271"
                        android:text="@string/chan3" />

                    <Button
                        android:id="@+id/theatre"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/pao271"
                        android:text="@string/chan4" />

                    <Button
                        android:id="@+id/quyi"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/pao271"
                        android:text="@string/chan5" />

                    <Button
                        android:id="@+id/acrobatics"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/pao271"
                        android:text="@string/chan6" />

                    <Button
                        android:id="@+id/art"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/pao271"
                        android:text="@string/chan7" />

                    <Button
                        android:id="@+id/tradition"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/pao271"
                        android:text="@string/chan8" />

                    <Button
                        android:id="@+id/medicine"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/pao271"
                        android:text="@string/chan9" />

                    <LinearLayout />

                    <Button
                        android:id="@+id/folk"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/pao271"
                        android:text="@string/chan10" />

                    <LinearLayout />
                </GridLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/taolun"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="50dp"
                        android:background="@drawable/background2"
                        android:gravity="center"
                        android:text="讨论区" />

                    <Button
                        android:id="@+id/shipinqua"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="50dp"
                        android:background="@drawable/background2"
                        android:gravity="center"
                        android:text="视频区" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/dibu"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/bottom1_zhuye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xuanxiangka_zhuye" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/bottom1_pindao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xuanxiangka_pindao" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/bottom1_dongtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xuanxiangka_dongtai" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
