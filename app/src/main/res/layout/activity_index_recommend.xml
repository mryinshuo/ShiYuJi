<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page1_tuijian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--排行榜-->
    <LinearLayout
        android:id="@+id/paihangbang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:src="@drawable/paihangbang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text=" 排行榜 " />
    </LinearLayout>

    <ScrollView
        android:id="@+id/page1_tuijianshipin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--推荐视频区域-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--单行视频，包含两个视频按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="horizontal">
                <!--第一行第一个视频区域-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!--视频区域-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp">

                        <VideoView
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/hequminge"
                            android:onClick="shipinleidianji" />
                    </LinearLayout>
                    <!--文字介绍区域-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="#FDFDF4"
                            android:gravity="center"
                            android:text="山西省河曲县 河曲民歌 原生态乡土民歌"
                            android:textColor="#E5B483"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>
                <!--第一行第二个视频区域-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!--视频区域-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp">

                        <VideoView
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/quju" />
                    </LinearLayout>

                    <!--文字介绍区域-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="#FDFDF4"
                            android:gravity="center"
                            android:text="北京曲剧,曲艺单弦牌子曲为主发展而成"
                            android:textColor="#E5B483"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>
                <!--第二个视频结束-->
            </LinearLayout>
            <!--单行视频结束-->
            <!--单行视频，包含两个视频按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="horizontal">
                <!--第一行第一个视频区域-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
