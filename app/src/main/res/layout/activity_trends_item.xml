<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants">
    <LinearLayout
        android:id="@+id/trendsLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/trendsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trendsContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:id="@+id/trendsImg"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/timea1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/timea1" />

            <TextView
                android:id="@+id/middlea1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/timea1"
                android:paddingTop="5dp"
                android:text=" | " />

            <TextView
                android:id="@+id/talka1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/middlea1"
                android:paddingTop="5dp"
                android:text="@string/talka1" />

            <TextView
                android:id="@+id/middlea2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/talka1"
                android:paddingTop="5dp"
                android:text=" | " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/middlea2"
                android:paddingTop="5dp"
                android:text="@string/wella1" />

            <ImageButton
                android:id="@+id/zan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#0000"
                android:src="@drawable/like11" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>