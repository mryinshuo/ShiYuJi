<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--背景图片-->
        <LinearLayout
            android:id="@+id/backgroundIV1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/beijingtu1copy_1"
            android:orientation="horizontal">
            <!--用户部分-->
            <LinearLayout
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <!--用户头像-->
                <ImageView
                    android:id="@+id/userHP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_head" />
                >
                <!--用户名称-->
                <TextView
                    android:id="@+id/userN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="暮雨寒鸦"
                    android:textColor="#fff"
                    android:textSize="25dp" />
                <!--用户签名-->
                <TextView
                    android:id="@+id/userS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="不如总在途中，于是常与希翼"
                    android:textColor="#fff"
                    android:textSize="22dp" />
                <!--用户信息-->
                <LinearLayout
                    android:id="@+id/userM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <!--关注-->
                    <LinearLayout
                        android:id="@+id/user2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/attention"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="关注"
                            android:textColor="#fff"
                            android:textSize="20dp" />
                        <!--关注数量-->
                        <TextView
                            android:id="@+id/attentionN"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="12132"
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <!--粉丝-->
                        <TextView
                            android:id="@+id/fan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="粉丝"
                            android:textColor="#fff"
                            android:textSize="20dp" />
                        <!--粉丝数量-->
                        <TextView
                            android:id="@+id/fanN"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="12132"
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--访客-->
                        <TextView
                            android:id="@+id/visitor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="访客"
                            android:textColor="#fff"
                            android:textSize="20dp" />
                        <!--访客数量-->
                        <TextView
                            android:id="@+id/visitorN"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="12132"
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="0.7"
                    android:orientation="horizontal">
                    <!--用户头像2-->
                    <ImageView
                        android:id="@+id/userHP2"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/xiaotupian" />

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="62dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <!--用户名称-->
                        <TextView
                            android:id="@+id/userN2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="暮雨寒鸦"
                            android:textSize="14dp" />
                        <!--动态时间-->
                        <TextView
                            android:id="@+id/dynamicT2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2018/05/18"
                            android:textSize="12dp" />
                    </LinearLayout>
                    <!--关注按钮-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp">

                        <Button
                            android:id="@+id/attentionB1"
                            android:layout_width="65dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="6dp"
                            android:background="#f93"
                            android:text="关注"
                            android:textSize="20dp" />

                        <Button
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="6dp"
                            android:id="@+id/attentionB2"
                            android:layout_width="65dp"
                            android:layout_height="40dp"
                            android:background="#f93"
                            android:text="私信"
                            android:textSize="20dp"/>
                    </LinearLayout>

                </LinearLayout>
                <!--动态文字-->
                <TextView
                    android:id="@+id/dynamicT"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:text="        今天亲眼看见了孟津剪纸，真是不枉此行。剪纸里面的人物形象生动，惟妙惟肖。分享一张剪纸照片，这个剪纸的名称为《红楼群芳图》"
                    android:textSize="16dp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--动态图片-->
                        <ImageView
                            android:id="@+id/dynamicP"
                            android:layout_width="wrap_content"
                            android:layout_height="236dp"
                            android:src="@drawable/xiaotupian" />

                        <!--单个动态的信息-->
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="31dp"
                            android:orientation="horizontal">
                            <TextView
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/zan"
                        android:textSize="20dp" />

                        <TextView
                            android:layout_marginLeft="65dp"
                            android:background="@drawable/zan"
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:textSize="20dp" />
                        <TextView
                            android:layout_marginLeft="65dp"
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/pinglun"
                            android:textSize="20dp" />
                    </LinearLayout>
                        <!--动态信息的数量-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="31dp"
                            android:orientation="horizontal">
                            <!--访问量的数量-->
                            <TextView
                                android:id="@+id/pageVN"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="200"
                                android:textSize="20dp" />
                            <!--点赞的数量-->
                            <TextView
                                android:id="@+id/likeN"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="10"
                                android:textSize="20dp" />
                            <!--评论的数量-->
                            <TextView
                                android:id="@+id/commentN"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="22"
                                android:textSize="20dp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>