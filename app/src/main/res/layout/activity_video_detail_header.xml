<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@color/gray"
    android:orientation="vertical">

    <VideoView
        android:id="@+id/videoDetailVV"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/hequminge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.shiyuji.CircleImageView
            android:id="@+id/videoDetailHead"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/hequminge" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/videoDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="山西河曲民歌官方"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/videoDetailTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8-7" />

                <TextView
                    android:id="@+id/videoDetailVisitNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="次浏览" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/videoDetailFollow"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_corner_white"
            android:gravity="center"
            android:text="+ 关注"
            android:textColor="#E5B483" />
    </LinearLayout>

    <TextView
        android:id="@+id/videoDetailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:paddingEnd="20dp"
        android:text="河曲民歌在反映中国民歌发展历史与中国民间社会生活状况方面，具有典型的意义。"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/dianzan" />

            <TextView
                android:id="@+id/videoDetailLikeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/pinglun" />

            <TextView
                android:id="@+id/videoDetailCommentNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/fenxiang" />

            <TextView
                android:id="@+id/videoDetailShareNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/videoDetailFavorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/xihuan" />
    </LinearLayout>
</LinearLayout>